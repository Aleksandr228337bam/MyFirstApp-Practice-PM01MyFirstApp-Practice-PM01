<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myfirstapp.HomeFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.myfirstapp.GalleryFragment"
        android:label="Галерея"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.example.myfirstapp.MediaFragment"
        android:label="Медиа"
        tools:layout="@layout/fragment_media" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.myfirstapp.SettingsFragment"
        android:label="Настройки"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.myfirstapp.DetailsFragment"
        android:label="Детали задачи"
        tools:layout="@layout/fragment_details" />

</navigation>